<div class="bg">
	<header class="container-fluid">
		<div class="row">
			<h1 class="title text-center header_title">Puppies</h1>
			<h2 class="text-center header_info">Trouvez votre dog sitter</h2>
			<%= link_to 'send mail', action: :send_mail %>
		</div>
		<div class="row">
			<div class="col-lg-offset-7 col-lg-4 contact_form ">
	
				<form class="form-horizontal" action="<%= send_mail_path %>" method="get">
			        <fieldset>
			           <legend class="text-center title text-center form_title">S'inscrire</legend>
			    
			            <!-- Name input-->
			            <div class="form-group">
			              <label class="col-md-3 control-label" for="name">Nom</label>
			              <div class="col-md-6">
			                <input id="name" name="name" type="text" placeholder="Entrez votre nom" class="form-control">
			              </div>
			            </div>
			    
			            <!-- Email input-->
			            <div class="form-group">
			              <label class="col-md-3 control-label" for="email">Mail</label>
			              <div class="col-md-6">
			                <input id="email" name="email" type="text" placeholder="Entrez votre adresse email" class="form-control">
			              </div>
			            </div>
			    
			            <!-- Form actions -->
			            <div class="form-group">
			              <div class="col-md-9 text-right">
			              	<button type="submit" class="btn btn-default btn-lg title">S'inscrire</button>
			              </div>
			            </div>
			        </fieldset>
			    </form>
				
			</div>
		</div>
	</header>


</div>

